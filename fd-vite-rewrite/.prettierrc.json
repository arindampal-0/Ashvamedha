{
    "$schema": "https://json.schemastore.org/prettierrc.json",
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "importOrder": [
        "(.*).css$",
        "(.*).png$",
        "<THIRD_PARTY_MODULES>",
        "^@pages/(.*)$",
        "^@components/(.*)$",
        "^@data/(.*)$",
        "^[.*]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
